
@if (Items != null)
{
    <div class="component-grid pb-3">
        @foreach (var item in Items)
        {
            <Item ViewModel="item" Size="@Size" ShowText="@ShowText"/>
        }
    </div>
}

@code {
    [Parameter] public IEnumerable<GridItem>? Items { get; set; }
    [Parameter] public string? Size{ get; set; }
    [Parameter] public bool ShowText { get; set; }
}