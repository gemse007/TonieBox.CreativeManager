<MudCard>
    <MudTextField Immediate="true" @bind-Value="@Value" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Delete" OnAdornmentClick="@(()=>Value = "")" style="@(FullSize ? "font-size:300%" :"")"/>
        <MudStack Row="true">
    @if (CodeItems != null) foreach (string codeitem in CodeItems)
        {
            <MudButton Class="pa-4;ma-4" style="@(FullSize ? "font-size:300%" :"")" OnClick="@(()=>Value += codeitem)">@codeitem</MudButton>
        }
    </MudStack>
</MudCard>
@code {
    private string _Value = "";
    [Parameter]
    public string Value { get => _Value; set { if (_Value != value) { _Value = value; if (ValueChanged != null) ValueChanged.Value.InvokeAsync(_Value); } } }
    [Parameter]
    public IEnumerable<string>? CodeItems { get; set; }
    [Parameter]
    public EventCallback<string>? ValueChanged { get; set; }
    [Parameter]
    public bool FullSize { get; set; }
}
